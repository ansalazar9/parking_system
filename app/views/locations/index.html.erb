<div class="container">
  <h2>Locations</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Max lost</th>
        <th>Description</th>
        <th>Map</th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
       <tr>
         <td> <%= location.name %> </td>
         <td> <%= location.address %> </td>
         <td> <%= location.max_slots %> </td>
         <td> <%= location.description %> </td>
         <% unless location.latitude.nil? && location.longitude.nil? %>
             <td>
               <%= image_tag "http://maps.google.com/maps/api/staticmap?size=150x150&sensor=false&zoom=14&markers=#{location.latitude}%2C#{location.longitude}" %>
             </td>
           <%end%>
       </tr>
      <%end %>
    </tbody>
  </table>
</div>
